<?xml version="1.0" encoding="UTF-8"?>
<beans
        xmlns="http://www.springframework.org/schema/beans"
        xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance"
        xsi:schemaLocation="http://www.springframework.org/schema/beans http://www.springframework.org/schema/beans/spring-beans-3.1.xsd">
    <!-- 我们可以在其中添加我们所需要配置的bean，也可以添加相应的数据库连接和事务处理等等，方便后续拓展
           -->
    <bean id="user" class="HelloSpringMvc.model.User">
        <property name="age" value="10"></property>
        <property name="userId" value="4369"></property>
        <property name="userName" value="syh"></property>
    </bean>

    <bean id="dbLoginInfo" class="HelloSpringMvc.model.DatabaseLoginInfo">
        <property name="type" value="jdbc:mysql://"></property>
        <property name="address" value="localhost"></property>
        <property name="port" value="3306"></property>
        <property name="database" value="ahellospringmvcdemodb"></property>
        <property name="userName" value="root"></property>
        <property name="password" value="123"></property>
    </bean>

</beans>