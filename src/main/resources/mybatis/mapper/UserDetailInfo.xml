<?xml version="1.0" encoding="UTF-8" ?>
<!DOCTYPE mapper PUBLIC "-//mybatis.org//DTD Mapper 3.0//EN"
        "http://mybatis.org/dtd/mybatis-3-mapper.dtd">

<mapper namespace="UserDetailInfoMapper">
    <resultMap id="UserDetailInfoMap" type="HelloSpringMvc.model.UserDetailInfoModel">
        <result column="id" property="id" jdbcType="BIGINT" />
        <result column="user_name" property="userName" jdbcType="VARCHAR" />
        <result column="sex" property="sex" jdbcType="TINYINT"/>
        <result column="age" property="sex" jdbcType="TINYINT"/>
        <result column="tel" property="tel" jdbcType="VARCHAR"/>
        <result column="email" property="email" jdbcType="VARCHAR"/>
        <result column="spouse" property="spouse" jdbcType="VARCHAR"/>
    </resultMap>

    <insert id="insertUserDetailInfo" parameterType="HelloSpringMvc.model.UserDetailInfoModel">
        insert into tbl_user_detail_info (id,user_name,sex,age,tel,email,spouse)
        values (#{id},#{userName},#{sex},#{age},#{tel},#{email},#{spouse})
    </insert>

    <select id="selectUserDetailInfoCountByUserName" parameterType="java.lang.String" resultType="java.lang.Integer">
        select count(*) from tbl_user_detail_info
        where user_name=#{userName}
    </select>

</mapper>